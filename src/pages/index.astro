---
import Layout from "../layouts/Layout.astro";
import Analytics from "../components/Analytics.astro";
import HeroSection from "../components/HeroSection";
import ExpertiseSection from "../components/ExpertiseSection";
import EnhancedKeyProjects from "../components/EnhancedKeyProjects";
import ConnectSection from "../components/ConnectSection";
import keyProjects from "../lib/key-projects.json";

const metaTags = {
  title:
    "Andrew Riefenstahl: AI-Powered Web Development & Enterprise Solutions",
  description:
    "Leading AI developer specializing in intelligent web applications, long-term memory AI models, HIPAA-compliant security, and MCP server development. Thought leadership in enterprise technology solutions.",
  url: "https://andrewriefenstahl.com",
  twitterHandle: "@riefer02",
};
---

<Layout metaTags={metaTags}>
  <Analytics />

  <!-- Modern spacing and structure -->
  <div class="space-y-0">
    <!-- Hero Section -->
    <HeroSection client:load />

    <!-- Expertise Section -->
    <ExpertiseSection client:load />

    <!-- Enhanced Projects Section -->
    <EnhancedKeyProjects keyProjects={keyProjects} client:load />

    <!-- Connect Section -->
    <ConnectSection client:load />
  </div>
</Layout>

<style>
  /* You can add custom Tailwind CSS styles here if needed */
</style>
