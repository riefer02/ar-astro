---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import PostCard from "../../components/PostCard.astro";

const allPosts = await getCollection("posts");

const sortedPosts = allPosts.sort((a, b) => {
  return (
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  );
});

const metaTags = {
  title: "Thought Leadership Blog - Andrew Riefenstahl",
  description:
    "Explore insights on AI development, enterprise security, and modern web technologies. Deep-dive articles on MCP servers, memory AI systems, and developer best practices.",
  url: "https://andrewriefenstahl.com/posts",
};
---

<Layout metaTags={metaTags}>
  <main class="px-6 py-16">
    <div class="mx-auto max-w-7xl">
      <!-- Header Section -->
      <div class="mb-16 text-center">
        <div
          class="mb-6 inline-flex items-center justify-center rounded-xl bg-stone-100 p-3"
        >
          ðŸ“–
        </div>
        <h1 class="mb-4 text-4xl font-bold text-stone-900 md:text-5xl">
          Writing & Musings
        </h1>
        <p class="mx-auto mb-8 max-w-3xl text-lg text-stone-600">
          Personal reflections on technology, life, music, philosophy, and the
          human experience. A mix of technical insights, creative pursuits, and
          honest thoughts on navigating this world.
        </p>

        <!-- Stats -->
        <div
          class="flex flex-col items-center justify-center gap-8 text-center sm:flex-row"
        >
          <div class="flex items-center space-x-2">
            <span class="text-stone-600">ðŸ“ˆ</span>
            <span class="font-medium text-stone-700"
              >{sortedPosts.length} Articles</span
            >
          </div>
          <div class="flex items-center space-x-2">
            <span class="text-stone-600">ðŸ“…</span>
            <span class="font-medium text-stone-700"
              >Latest: {
                new Date(sortedPosts[0]?.data.pubDate).toLocaleDateString(
                  "en-US",
                  { month: "long", year: "numeric" }
                )
              }</span
            >
          </div>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3">
        {sortedPosts.map((post) => <PostCard post={post} />)}
      </div>

      <!-- Additional CTA -->
      {
        sortedPosts.length === 0 && (
          <div class="py-16 text-center">
            <p class="mb-4 text-lg text-stone-600">
              More articles coming soon...
            </p>
            <p class="text-stone-500">
              In the meantime, check out my projects and connect with me.
            </p>
          </div>
        )
      }
    </div>
  </main>
</Layout>
