---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import ogImage from "../assets/ar-ogimage-optimized.png";
import "../styles/globals.css";
interface Props {
  metaTags: {
    title: string;
    description: string;
    image?: string;
    url: string;
    twitterHandle?: string;
  };
}

const { metaTags } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{metaTags.title}</title>
    <meta name="description" content={metaTags.description} />
    <meta name="author" content="Andrew Riefenstahl" />
    <meta
      name="keywords"
      content="Andrew Riefenstahl, web developer, AI specialist, MCP server, HIPAA compliance, full stack development, React, Astro, thought leadership"
    />
    <meta property="og:title" content={metaTags.title} />
    <meta property="og:description" content={metaTags.description} />
    <meta property="og:image" content={metaTags.image || ogImage.src} />
    <meta property="og:url" content={metaTags.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Andrew Riefenstahl" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:creator"
      content={metaTags.twitterHandle || "@riefer02"}
    />
    <meta name="twitter:title" content={metaTags.title} />
    <meta name="twitter:description" content={metaTags.description} />
    <meta name="twitter:image" content={metaTags.image || ogImage.src} />
    <link rel="canonical" href={metaTags.url} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Andrew Riefenstahl",
        "jobTitle": "Full Stack Developer & AI Specialist",
        "url": "https://andrewriefenstahl.com",
        "sameAs": [
          "https://twitter.com/riefer02",
          "https://github.com/riefer02"
        ],
        "knowsAbout": [
          "Web Development",
          "Artificial Intelligence",
          "MCP Server Development",
          "HIPAA Compliance",
          "Security Engineering",
          "Full Stack Development"
        ],
        "description": "Full-stack developer specializing in AI applications, secure web development, and MCP server architecture."
      }
    </script>
  </head>
  <body class="bg-stone-200 text-gray-600">
    <Header title={metaTags.title} />
    <div class="px-4 py-8">
      <slot />
    </div>
    <style is:global>
      :root {
        --accent: 136, 58, 7;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
    </style>
  </body>
</html>
