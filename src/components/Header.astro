---
import { Image } from "astro:assets";
import MobileNav from "./MobileNav";
import DesktopNav from "./DesktopNav";
const { title } = Astro.props;
import profileImage from "../assets/Andrew-Riefenstahl.jpg";
---

<header
  class="fixed top-0 z-50 w-full border-b border-stone-600/20 bg-gradient-to-r from-stone-800 to-stone-700 shadow-lg backdrop-blur-sm"
>
  <div
    class="mx-auto flex w-full max-w-7xl items-center justify-between px-6 py-4"
  >
    <!-- Logo/Brand Section -->
    <div class="flex items-center space-x-3">
      <a href="/" class="group flex items-center space-x-3">
        <div class="relative">
          <Image
            src={profileImage}
            alt="Andrew Riefenstahl profile"
            width="40"
            height="40"
            class="rounded-full ring-2 ring-stone-300/20 transition-all duration-200 group-hover:ring-stone-300/40"
          />
          <div
            class="absolute inset-0 rounded-full bg-gradient-to-tr from-stone-400/20 to-transparent"
          >
          </div>
        </div>
        <div class="hidden sm:block">
          <h1
            class="text-xl font-bold text-stone-100 transition-colors duration-200 group-hover:text-white"
          >
            Andrew Riefenstahl
          </h1>
          <p class="-mt-1 text-sm text-stone-300">Developer & Thought Leader</p>
        </div>
      </a>
    </div>

    <!-- Navigation Section -->
    <div class="flex items-center space-x-4">
      <!-- Desktop Navigation -->
      <DesktopNav client:load />

      <!-- Mobile Navigation -->
      <MobileNav client:load />
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>
