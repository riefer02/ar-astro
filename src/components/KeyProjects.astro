---
import {
  Card,
  CardContent,
  CardTitle,
  CardDescription,
  CardFooter,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
const { keyProjects } = Astro.props;
---

<section class="mb-8">
  <h2 class="mb-6 text-lg font-semibold sm:text-xl">Key Projects</h2>
  <div class="space-y-6">
    {
      keyProjects.projects.map((project) => (
        <Card
          key={project.name}
          className="w-full rounded-lg shadow-md bg-white"
        >
          <CardContent className="space-y-2">
            <CardTitle className="text-md lg:text-2xl font-bold leading-tight">
              {project.name}
            </CardTitle>
            <p class="text-sm text-gray-600">{project.subheader}</p>
            <CardDescription className="leading-relaxed text-gray-600">
              {project.description}
            </CardDescription>

            <div class="flex flex-wrap gap-2">
              {project.technologies.map((tech) => (
                <Badge key={tech} className="bg-gray-200 mt-2 text-gray-800">
                  {tech}
                </Badge>
              ))}
            </div>
          </CardContent>

          <CardFooter className="pt-4 mt-auto">
            <a href={project.url} target="_blank" class="no-underline">
              <Button variant="outline" className="w-full sm:w-auto">
                Visit Project
              </Button>
            </a>
          </CardFooter>
        </Card>
      ))
    }
  </div>
</section>
